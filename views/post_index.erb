
<h1>HACK N BLOG</h1>
<a href='/posts/new'>Create Post</a>

<div class="post-container">
<% @posts.each do |post| %>
	
	<a href="/posts/<%= post.id %>">
		<h2><%= post.title %></h2> </a>
		<%= post.created_at %>
		</br>

	<form action="/posts/<%=post.id%>/edit" method="post">
	<input type="submit" name="up_vote" value="edit post" />
	</form>

	<form action="/posts/<%=post.id%>/delete" method="post">
	<input type="submit" name="delete post" value="delete" />
	</form>

	<form action="/posts/<%=post.id%>/upvote" method="post">
	<input type="submit" name="up_vote" value="LOVE IT: <%=post.up_votes%>" />
	</form>

	<form action="/posts/<%=post.id%>/downvote" method="post">
	<input type="submit" name="down_votes" value="HATE IT: <%=post.down_votes%>" />
	</form>


	</form>

	
<% end %>
</div>

